{
  "name": "stylelint-config-saiichihashimoto",
  "version": "0.0.0-development",
  "homepage": "https://github.com/saiichihashimoto/stylelint-config-saiichihashimoto#readme",
  "bugs": {
    "url": "https://github.com/saiichihashimoto/stylelint-config-saiichihashimoto/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saiichihashimoto/stylelint-config-saiichihashimoto.git"
  },
  "main": "stylelint.config.js",
  "scripts": {
    "test": "run-s test:*",
    "test:lint": "run-s test:lint:*",
    "test:lint:js": "eslint --report-unused-disable-directives --ignore-path .gitignore --ignore-pattern '!.*.js' .",
    "test:lint:package": "pkg-ok"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --report-unused-disable-directives --fix",
      "git add"
    ],
    "package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": "saiichihashimoto"
  },
  "dependencies": {
    "stylelint": "9.10.1",
    "stylelint-config-airbnb": "0.0.0",
    "stylelint-config-standard": "18.2.0",
    "stylelint-declaration-block-no-ignored-properties": "1.1.0",
    "stylelint-no-z-index": "1.1.2",
    "stylelint-order": "2.0.0",
    "stylelint-scss": "3.5.2"
  },
  "devDependencies": {
    "cz-conventional-changelog": "2.1.0",
    "eslint": "5.13.0",
    "eslint-config-saiichihashimoto": "1.0.0",
    "husky": "1.3.1",
    "lint-staged": "8.1.3",
    "npm-run-all": "^4.1.5",
    "pkg-ok": "2.3.1",
    "sort-package-json": "1.18.0"
  },
  "peerDependencies": {
    "stylelint": ">=9.10.1"
  }
}
